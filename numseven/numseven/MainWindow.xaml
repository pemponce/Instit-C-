<Window x:Class="numseven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:numseven"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <CheckBox Content="Круг" Checked="CircleCheckBox_Checked"/>
            <CheckBox Content="Прямоугольник" Checked="RectangleCheckBox_Checked"/>
            <CheckBox Content="Треугольник" Checked="TriangleCheckBox_Checked"/>
            <Button Content="Обнаружить фигуры" Click="DetectShapesButton_Click"/>
            <Button Content="Очистить холст" Click="ClearCanvasButton_Click"/>
        </StackPanel>

        <!-- Холст для отображения фигур -->
        <Canvas Name="canvas" Background="White" Grid.Row="1"/>
    </Grid>
</Window>
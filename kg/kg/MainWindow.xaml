<Window x:Class="kg.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Image Processing" Height="450" Width="879">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Загрузка фотографии" Click="LoadImageButton_Click"/>
            <Button Content="После использования метода" Click="ProcessImageButton_Click"/>
            <ComboBox x:Name="MethodComboBox" Width="150">
                <ComboBoxItem Content="Метод препарирования"/>
                <ComboBoxItem Content="Метод линейного контрастирования"/>
                <ComboBoxItem Content="Метод соляризации"/>
                <ComboBoxItem Content="Метод логарифмического изменения яркости"/>
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,34,0" Width="NaN">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="OriginalImage" Grid.Column="0" Width="400" Height="400" Margin="10"/>
            <Image x:Name="ProcessedImage" Grid.Column="1" Width="400" Height="400" Margin="10"/>
        </Grid>
    </Grid>
</Window>